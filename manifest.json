{
  "manifest_version": 2,
  "name": "Monterail Darkness",
  "description": "Monterail Dark, a Thunderbird theme inspired by the mockup of Monterail",
  "version": "4.1.0",
  "author": "Joaquin Ayuso de Paul",
  "homepage_url": "https://addons.thunderbird.net/en-US/thunderbird/addon/monterail-darkness/",
  "applications": {
    "gecko": {
      "id": "joaxap@gmail.com",
      "strict_min_version": "78.0"
    }
  },
  "icons": {
    "64": "icon.png"
  },
  "experiment_apis": {
    "WindowListener": {
      "schema": "api/WindowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "api/WindowListener/implementation.js"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "content/options.html",
    "browser_style": true
  },
  "permissions": ["storage", "messagesModify"]
}

